<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mypage_drawerLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_line"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/back_button_profile"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/topUserName_profilePage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="상대방 닉네임"
            android:textAlignment="center"
            android:textSize="18dp" />


        <ImageButton
            android:id="@+id/message_button_profilePage"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:src="@drawable/plane" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageButton
            android:id="@+id/menu_btn_profile"
            android:gravity="right"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/dot">
        </ImageButton>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:paddingStart="24dp">

                    <TextView
                        android:id="@+id/profile_nickname"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8.5dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="E-mail"
                            android:textAlignment="center"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/profile_Email"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity=""
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="300dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8.5dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="전공"
                            android:textAlignment="center"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/profile_major"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity=""
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="300dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8.5dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="학년"
                            android:textAlignment="center"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/profile_grade"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity=""
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="300dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8.5dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Skill"
                            android:textAlignment="center"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/profile_Skill"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity=""
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="300dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/profile_github"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/gihub"
                            />

                        <ImageView
                            android:id="@+id/profile_velog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/velog2" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mypage_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        android:background="#3843A2"
        app:itemTextColor="@color/white"
        android:foregroundGravity="right"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_navigation">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>